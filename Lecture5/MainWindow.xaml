<Window x:Class="KMA.ProgrammingInCSharp2025.Lecture5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMA.ProgrammingInCSharp2025.Lecture5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>First Name: </TextBlock>
                <TextBox Text="{Binding FirstName}" Width="200"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Last Name: </TextBlock>
                <TextBox Text="{Binding LastName}" Width="200"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Full Name: </TextBlock>
                <TextBlock Text="{Binding FullName}" Width="200"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
