<Window x:Class="KMA.ProgrammingInCSharp2025.Practice2LoginWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMA.ProgrammingInCSharp2025.Practice2LoginWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Height="50" Width="100" Margin="10" Click="Button_Click">But1</Button>
        <Button Grid.Row="1" Grid.Column="0" Height="50" Width="100" Margin="10,20" Content="But2" VerticalAlignment="Bottom"></Button>
        <Button Grid.Row="2" Grid.Column="1" Height="50" Width="100" Margin="50,80,100,110" Grid.ColumnSpan="2" HorizontalAlignment="Left">But3</Button>
    </Grid>
</Window>
